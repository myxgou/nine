@import "/utils/css/common.wxss";

page {
  background-color: #f4f4f4;
}

.user-info-board {
  margin: 60px 10px 10px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  background-color: #ffffff;
  width: 90%;
  border-radius:5px;
}

.share-image {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 10px;
  top: 10px;
}

.user-name {
  margin-top: 50px;
  color: #333333;
  font-size: 15px;
}

.qrcode {
  width: 150px;
  height: 150px;
  margin-top: 5px;
}

.qrcode-tips {
  font-size: 10px;
  color: #838383;
  height: 18px;
  line-height: 18px;
}

.total-board {
  height: 104px;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.info-tips-board {
  height: 14px;
  line-height: 14px;
  margin: 10px;
  color: 14px;
  display: flex;
}

.info-sepeator-view {
  width: 2px;
  height: 14px;
  background-color: #F07D2D;
  flex: none;
}

.info-tips {
  flex: 1;
  height: 14px;
  font-size: 14px;
  color: #202020;
  margin-left: 5px;
}

.status-list-board {
  height: 80px;
  justify-content: space-between;
  margin: 0 10px;
  display: flex;

}

.item-board {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-value {
  font-size: 20px;
  color: #303030;
}

.item-key {
  font-size: 14px;
  color: #9C9C9C;
}

.user-avatar-board {
  position: absolute;
  width: 74px;
  height: 74px;
  top: 27px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius:37px; 
  left: 50%;
  margin-left: -37px;
  background-color: #ffffff;
}
.user-avatar {
  width: 50px;
  height: 50px;
}

.submit-button {
  position: absolute;
  width: 90%;
  bottom: 5px;
  left: 5%;
  color: white;
}