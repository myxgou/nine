/* pages/user/user.wxss */
@import "/utils/css/common.wxss";
.user-header {
  width: 100%;
  height: 200rpx;
  display: flex;
}

.user-menu-list {
  top:100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border: 2rpx #ccc solid;
  border-radius: 50%;
  margin-top: 0rpx;
}

.userinfo-describe {
  height: 128rpx;
  flex-direction: column;
  width: 60%;
  display: flex;
}

.userinfo-name {
  font-size: 14px;
}

.userinfo-service-date {
  font-size: 12px;
}

.userinfo-authentication-no {
  font-size: 12px;
  color: #ccc;
}

.userinfo-authentication-yes {
  font-size: 12px;
  color: red;
}

.user-menu-list-navigator-icon {
  width: 50rpx;
  height: 50rpx;
}

.user-menu-list-navigator-arrow {
  width: 30rpx;
  height: 30rpx;
}

.user-menu-list-navigator {
  padding: 30rpx 30rpx;
  position: relative;
  align-items: center;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}

.user-menu-list-navigator-view {
  display: flex;
}
.user-menu-list-navigator-view>view {
  margin-left: 20rpx;
}
.user-menu-list-navigator-view-text {
  font-size: 16px;
  color: #333333;
}
.spearLine {
  height: 10rpx;
  background-color: #f4f4f4;
}