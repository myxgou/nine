@import "/utils/css/common.wxss";

page {
  background-color: #f5f5f5;
}

.join-header-view {
  height: 72px;
  width: 100%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}

.join-image-view {
  width: 36px;
  height: 36px;
  margin-left: 12px;
  background-color: #56BD48;
  border-radius: 18px;
}

.join-image {
  width: 23px;
  height: 20px;
  margin: 8px 6px;
}

.join-header-info {
  margin-left: 12px;
  display: flex;
  flex-direction: column;
}

.join-header-info label:first-child {
  height: 14px;
  line-height: 14px;
  font-size: 14px;
  color: #111111;
  flex: none;
}

.join-header-info label:last-child {
  flex: 1;
  font-size: 10px;
  margin-top: 7px;
  margin-right: 20px;
  color: #8E8E8E;
}

.input-info-view {
  margin-top: 16px;
  background-color: #ffffff;
}

.input-item-view {
  display: flex;
  align-items: center;
  margin: 0 12px;
  height: 45px;
  border-bottom: 1px solid #eeeeee;
}

.input-item-view>label {
  width: 50px;
  color: #333333;
  font-size: 14px;
  flex: none;
}

.input-item-view>input {
  flex: 1;
  font-size: 14px;
}

.comfirm-button {
  margin: 30px 20px 0 20px;
  color: white;
}

.rights-view {
  display: flex;
  height: 22px;
  margin: 7px 12px;
  align-items: center;
}


.rights-view>label {
  margin-left: 7px;
  flex: 1;
  font-size: 12px;
  color: #333333;
}

radio {
  font-size: 14px;
}


checkbox .wx-checkbox-input {
  width: 14px;
  height: 14px;
}