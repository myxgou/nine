@import "/utils/css/common.wxss";

.view-board {
  display: flex;
  flex-direction: column;
}

.scroll-list-view {
  flex: 1;
  width: 100%;
  margin: 0 10px;
}

.item-view {
  height:40px; 
  display: flex;
  
}

.image-view {
  width: 40px;
  height: 40px;
  flex: none;
}

.image-view>image {
  width: 30px;
  height: 30px;
}

.info-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-view>label:first-child {
  height: 20px;
  font-size: 16px;
  line-height: 20px;
}
.info-view>label:last-child {
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #b2b2b2;
}

.arrow-image {
  width: 15px;
  height: 15px;
}

.position-button {
  width: 100%;
  height: 45px;
  left: 0;
  bottom: 0;
  border: none;
  border-radius: 0;
  flex: none;
}