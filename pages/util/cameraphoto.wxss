.view-board {
  margin: 0;
  width: 100%;
  height: 100%;
  position: absolute;
}

.camera-board {
  width: 100%;
  height: 90%;
}

.camera {
  width: 100%;
  height: 100%;
}

.takephoto-board {
  background-color: #888888;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 10%
}

.preview-image {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.change-camera-position {
  width: 30px;
  height: 30px;
  position: absolute;
  right:20px;
}

.takephoto-image {
  width: 40px;
  height: 40px;
  position: absolute;
  margin-left: 50%;
}

.takephoto-sure-view {
  width: 60px;
  height: 30px;
  margin-left: 30px; 
  color: white;
}

.takephoto-reset-view {
  width: 60px;
  height: 30px;
  margin-right: 30px; 
  color: white;
}
