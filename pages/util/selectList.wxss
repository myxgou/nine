@import "/utils/css/common.wxss";

.scroll-list-view {
  margin:0 15px 60px 10px
}

.item-view {
  height:40px; 
  display: flex;
  align-items: center;
  border-bottom: 1px solid #b2b2b2;
}

.image-view {
  width: 40px;
  height: 40px;
  flex: none;
}

.image-view>image {
  width: 30px;
  height: 30px;
}

.info-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  height: 20px;
  font-size: 16px;
  line-height: 20px;
}

.item-sub-title {
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #b2b2b2;
}

.arrow-image {
  width: 15px;
  height: 15px;
  margin-right: 15px;
  flex: none;
}

.position-button {
  width: 90%;
  height: 45px;
  position: fixed;
  bottom: 5px;
  left: 5%;
}