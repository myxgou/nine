<import src="/utils/component/fullReview.wxml" />
<view class='board-view'>
  <label>请选择存放目的</label>
  <view class='store-aim-board'>
    <block wx:for-items="{{storeList}}" wx:for-item="item">
      <label data-index='{{index}}' data-reason='{{item.name}}' bindtap='chooseStoreTypeAction' class='store-list-label {{index == selectedIndex?"selected-store":"normal-store"}}' style='width:{{100/storeList.length}}%'>{{item.name}}</label>
  </block>
  </view>
  <view wx:if='{{isOther}}' class='desc-input'><input bindinput='bindReasonAction' placeholder='请输入其他存放目的'></input></view>
  <view class='describe-board-view'>
  <label>请详细描述要存储的物品</label>
  <textarea class='comment-area' bindinput='bindDescAction' placeholder-class='comment-area-placeholder' placeholder='请详细输入物品描述'></textarea>
  <scroll-view scroll-x class='preview-list-scrollview' scroll-into-view='{{scrollToView}}'>
    <block wx:for-items="{{imageLists}}" wx:for-item="item">
      <image bindtap='reviewAction' bindlongtap='deleteAction' class='list-item-image' src='{{item}}' id='item{{index}}' mode='aspectFit' data-index='{{index}}' data-src='{{item}}'></image>
    </block>
  </scroll-view>
  <view class='camera-board-view'> 
    <image bindtap='addCamera' class='camera-add-image' src='/images/common/camera-add.png'></image>
  </view>
</view>
</view>

<button class='submit-button next-button' bindtap='nextAction'>下一步</button>


<template wx:if='{{isShowReview}}' is="fullReview" data="{{...reviewImage}}"></template>