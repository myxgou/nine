@import "/utils/css/common.wxss";
@import "/utils/css/fullReview.wxss";
.board-view {
  margin: 10px;
}

.describe-board-view {
  margin-top: 30px; 
}

.desc-input {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border: 1px solid #b2b2b2;
  border-radius: 5px;
}

.next-button {
  position: fixed;
  width: 100%;
  border-radius:0px;
  bottom: 0; 
}

.store-aim-board {
  width: 100%;
  margin: 10px 0;
  display: flex;
}

.store-list-label {
  display: block;
  height: 40px;
  line-height: 40px;
  text-align: center; 
}

.comment-area {
  margin: 10px 0;
  border: 1px solid #b2b2b2;
  border-radius: 3px;
  width: auto;
  padding: 5px;
}

.camera-board-view {
  width: 100%;
  text-align: right;
  height: 30px;
}

.camera-add-image {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}

.preview-list-scrollview {
  height: 60px;
  white-space:nowrap;
  width: 100%;
}

.list-item-image {
  width: 50px;
  height: 50px;
  margin: 5px;
  display:inline-block;
  border: 1px solid red;
}

.selected-store{
  color:#e64340;
  border-bottom: 1px solid #e64340;
}
.normal-store {
  color: #000000;
  border-bottom: none;
}

.desc-input>input {
  padding: 5px;
}