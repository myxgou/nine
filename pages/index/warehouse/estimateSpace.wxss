@import "/utils/css/common.wxss";
@import "/utils/css/fullReview.wxss";

.describe-board-view {
  height: 170px;
  display: flex;
  flex-direction: column;
  margin: 10px;
}

.desc-input {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border: 1px solid #b2b2b2;
  border-radius: 5px;
}

.next-button {
  position: fixed;
  width: 90%;
  left: 5%;
  bottom: 5px; 
}

.store-aim-board {
  width: 100%;
  margin: 10px 10px;
  display: flex;
}

.store-list-label {
  display: block;
  height: 40px;
  line-height: 40px;
  text-align: center; 
}

.pic-board-view {
  display: flex;
  flex-direction: row;
 }

.comment-area {
  width: auto;
  padding: 10px 0;
  height: 80px;
}

.camera-board-view {
  width: 65px;
  height: 65px;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5px;
  border:1px solid #D6D6D6;
}

.camera-add-image {
  width: 30px;
  height: 30px;
}

.preview-list-scrollview {
  height: 60px;
  white-space:nowrap;
  width: 100%;
}

.list-item-image {
  width: 50px;
  height: 50px;
  margin: 5px;
  display:inline-block;
  border: 1px solid red;
}

.selected-store{
  color:#e64340;
  border-bottom: 1px solid #e64340;
}
.normal-store {
  color: #000000;
  border-bottom: none;
}

.desc-input>input {
  padding: 5px;
}

.separate-line {
  width: 100%;
  height: 10px;
  background-color: #f4f4f4;
}

.store-tips {
  color: #333333;
  font-size: 14px;
  margin: 10px;
}