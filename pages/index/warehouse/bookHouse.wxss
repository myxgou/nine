@import "/utils/css/common.wxss";

.input-board-view {
  width: 90%;
  height: 150px;
  margin: 20px 5%;
  border-radius: 3px;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.input-board-view>view {
  display: flex;
  height: 40px;
  margin:5px;
  align-items: center;
}

.input-board-view input {
  margin-right: 5px;
  display: block;
  border-bottom: 1px solid #b2b2b2;
  flex: 1;
}

.input-board-view label {
  display: block;
  width: 80px;
  flex: none;
}

.next-board-view {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: column;
}

.next-board-view>label {
  height: 20px;
  margin-left: 5px;
  line-height: 20px;
}

.next-board-view>button {
  width: 100%;
  border: none;
  border-radius:0;
}

.next-board-view>button::after {
  content: ""
}