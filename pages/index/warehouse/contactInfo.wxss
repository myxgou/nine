@import "/utils/css/common.wxss";


.input-board-view {
  width: 90%;
  height: 150px;
  margin: 20px 5%;
  border-radius: 3px;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.input-board-view>view {
  display: flex;
  height: 40px;
  margin:5px;
  align-items: center;
}

.input-board-view input {
  margin-right: 5px;
  display: block;
  width: 100%;
  border-bottom: 1px solid #b2b2b2
}

.input-board-view label {
  display: block;
  width: 25%;
}

.submit-button {
  width: 90%;
  margin-top: 50px;
  margin-left: 5%;
}