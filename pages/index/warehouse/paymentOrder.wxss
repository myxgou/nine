@import "/utils/css/common.wxss";
page {
  background-color: #f7f7f7;
}
.payment-board-view {
  margin: 10px;
}

.input-price-board-view {
  border: 1px solid #E5E5E5;
  border-radius: 5px;
  margin: 10px 0;
  background-color: #ffffff;
}

.input-price-board-view view:last-child {
  border: none;
}

.input-board-view {
  display: flex;
  padding:0px 5px;
  border-bottom: 1px solid #E8E8E8;
  height: 56px;
  line-height: 56px;
  align-items:center;
}

.input-board-view>label {
    width: 130px;
    color: #111111;
    font-size: 14px;
}

.input-board-view>input {
  text-align: right;
  color: #111111;
}

.upon-board-view {
  border: 1px solid #E5E5E5;
  border-radius: 5px; 
  background-color: #ffffff;
}

.upon-board-view view:last-child {
  border: none;
}

.upon-board-view>label {
  width: 100px;
}

.button-position {
  width: 90%;
  margin: 30px 5%;
}

.upon-board-view {
  height: 57px;
  line-height: 57px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.totalPrice {
  width: 100%;
  background-color: #fff;
  margin-top: 5px;
}

.upon-tips-view {
  height: 30px;
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  margin: 0 10px;
  align-items: center;
}

.upon-tips-view:first-child {
  flex: none;
  width: 100px;
}

.upon-tips-view:last-child {
  flex: 1;
  text-align: right;
}

